<!Doctype html>
<html>
<head>
    <!--    the below is very important in order to have the display according to the device-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/requestsToHod.css" />
    <title>Report Generator</title>
</head>
<body>

<div class="item-container">
    <div class="row blank"></div>
    <div class="row">
        <div class="col-lg-3 col-md-2 col-sm-2"></div>
        <div class="col-lg-6 col-md-12 col-sm-8">
            <% for(var i in application) { %>
            <form class="card">
                    <div class="row body-container">
                        <div class="col-lg-3 col-md-4 col-sm-4 mode">
                            <label for="other">
                                <span><i class="fa fa-folder fa-3x"></i></span>
                                <h6>document for brochure will go here!</h6>
                            </label>
                        </div>
                        <div class="col-lg-9 col-sm-7 desc">
                            <div class="personal_info">
                                <div class="info">
                                    <div class="item">
                                        <h4>Name:&nbsp;&nbsp; </h4>
                                        <h5> <%= application[i].name %></h5>
                                    </div>
                                    <div class="item">
                                        <h4>Type:&nbsp;&nbsp; </h4>
                                        <h5> <%= application[i].type %></h5>
                                    </div>
                                    <div class="item">
                                        <h4>Co-ordinator.: &nbsp;&nbsp; </h4>
                                        <h5> <%= application[i].coordinator %></h5>
                                    </div>
                                    <div class="item">
                                        <h4>Date of Event:&nbsp;&nbsp; &nbsp;&nbsp;</h4>
                                        <h5> <%= (application[i].dateofevent)%></h5>
                                    </div>
                                    <div class="item">
                                        <h4>Venue:&nbsp;&nbsp; </h4>
                                        <h5> <%= application[i].venue %></h5>
                                    </div>
                                    <div class="item">
                                        <h4>Event Details:&nbsp;&nbsp; </h4>
                                        <h5> <%= application[i].eventdetails %></h5>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
            </form>
                <% } %>
        </div>
        <div class="col-lg-3 col-md-2"></div>
    </div>
</div>

<script src="js/script.js"></script>
<script language="javascript">print_state("sts");</script>
</body>
</html>
